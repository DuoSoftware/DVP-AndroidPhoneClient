<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="apps.veery.com.facetonevoip.IncomingActivity"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/incoming_lay_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/incoming_caller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+94623737948"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Audio Call Incoming"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/incoming_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/incoming_lay_dialpad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_marginBottom="132dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">
                <EditText
                    android:id="@+id/incoming_et_no"
                    android:textColorHint="@color/colorAccent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textSize="30sp"
                    android:cursorVisible="false"/>
                <ImageButton
                    android:id="@+id/incoming_ib_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingRight="@dimen/activity_horizontal_margin"/>

            </LinearLayout>
            <include
                layout="@layout/gridforward"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/income_btn_call_forward"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_phone_forwarded_white_24dp"
                    android:background="@drawable/boxboarder"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/income_btn_call_attended_forward"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_transform_white_24dp"
                    android:background="@drawable/boxboarder"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/income_btn_call_conference"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_conference"
                    android:background="@drawable/boxboarder"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    //bottom buttons
    <LinearLayout
        android:id="@+id/outgoing_income_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageButton
            android:id="@+id/incoming_btn_answer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_call_white_24dp"
            android:background="@drawable/boxboardergreen"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/activity_horizontal_margin"

            />
        <ImageButton
            android:id="@+id/incoming_btn_reject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/endcall"
            android:background="@drawable/boxboarderred"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/outgoing_speaker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/incoming_btn_speaker"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_speaker_phone_white_24dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/incoming_btn_dial"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/menu"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="left"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/incoming_btn_mute"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mic_off_white_24dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="right"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/incoming_btn_answer_reject"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/endcall"
            android:background="@drawable/boxboarderred"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
